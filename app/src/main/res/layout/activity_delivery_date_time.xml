<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.customer.com.twohrgrocery.customer.DeliveryDateTime">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:padding="15dp"
            android:text="@string/deliverydatetime"
            android:textSize="16sp"
            android:textColor="@color/RiverBed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/orucolor"
                android:layout_weight="1"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/DodgerBlue"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/DodgerBlue"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/CornflowerBlue"
                android:layout_weight="1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/white"
                android:layout_weight="0.7"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@drawable/gradientbackground">

        <TextView
            android:id="@+id/view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/custname"
            android:textColor="#959DAD"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cornerscopy"
            android:inputType="none"
            android:layout_marginTop="5dp"
            android:textColor="#454F63"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_delivAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/address"
                android:textColor="#959DAD"
                android:layout_margin="8dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/change_address_delivdatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/change"
                android:textColor="#3497FD"
                android:layout_margin="8dp"/>

        </LinearLayout>

        <EditText

            android:id="@+id/deliveryAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cornerscopy"
            android:layout_marginTop="5dp"
            android:textColor="#454F63"
            android:lines="3"
            android:gravity="top|left"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/view_delivDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/deliverydatetime"
            android:textColor="#959DAD"
            android:layout_margin="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corners"
                android:nestedScrollingEnabled="true">

            </ListView>


        </LinearLayout>

        <Button

            android:id="@+id/btn_deliveryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button_cart"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/buttonpayment"
            android:textColor="@color/white" />




    </LinearLayout>


</LinearLayout>


</ScrollView>