<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/edittextbordercpy"/>

            <!--<ImageView
                android:id="@+id/thumbnail"
                android:layout_width="65dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:scaleType="fitXY" />-->
            <ImageView
                android:id="@+id/itemPic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/cookies"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cookies"
                android:textSize="14sp"
                android:textColor="#454F63"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Brand : Lakshmi"
                    android:textSize="12sp"
                    android:textColor="#454F63"/>

            </LinearLayout>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:visibility="gone"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/itemLB"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textSize="12sp"
                   android:textColor="#3497FD"
                   android:layout_weight="0.2"/>
               <TextView
                   android:id="@+id/itemPrice"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textSize="12sp"
                   android:textColor="#3497FD"
                   android:layout_weight="0.6"/>

               <TextView
                   android:id="@+id/itemQty"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.3"
                   android:text=""
                   android:textSize="12sp"
                   android:textColor="#454F63"/>

               <TextView
                   android:id="@+id/itemValue"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.3"
                   android:layout_marginRight="10dp"
                   android:text=""
                   android:textAppearance="@font/open_sans_bold"
                   android:textColor="#3497FD"
                   android:textSize="12sp"
                   android:textStyle="bold" />

           </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/extra_inflater_OS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#EAEEF0">

    </LinearLayout>

</LinearLayout>