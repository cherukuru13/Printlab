<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_margin="3dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">


                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="85dp"
                    android:layout_height="75dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/biscuit" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/title_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="laxmi coconut powder"
        android:textColor="#454F63"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/price_pos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@null"
        android:textColor="#20AC40"
        android:textSize="10sp"
        app:fontFamily="@font/open_sans_bold" />

    <ImageView
        android:id="@+id/clickCart"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:src="@drawable/cartclick" />

</LinearLayout>