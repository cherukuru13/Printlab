<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <android.support.v7.widget.CardView
            android:layout_width="90dp"
            android:layout_height="110dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            android:layout_margin="3dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">

                <!-- <TextView
                     android:layout_width="90dp"
                     android:layout_height="90dp"
                     android:background="@drawable/edittextbordercpy"/>
     -->
                <ImageView
                    android:id="@+id/thumbnail_ro"
                    android:layout_width="85dp"
                    android:layout_height="75dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/bisc"
                    android:clickable="true"
                    android:scaleType="fitXY" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/title_ro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#454F63"
        android:layout_marginRight="5dp"
        android:text="laxmi coconut powder"
        android:textSize="14sp"/>

    <Spinner
        android:id="@+id/price_ro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textColor="#20AC40"
        android:textSize="10sp"
        android:layout_gravity="center"
        app:fontFamily="@font/open_sans_bold" />

    <ImageView
        android:id="@+id/clickCart_ro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cartclick"
        android:layout_gravity="center"/>

</LinearLayout>