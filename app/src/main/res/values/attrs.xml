<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--custom drop down text-->
    <declare-styleable name="CustomDropDownTextView">
        <attr name="dd_indicatorResId" format="reference" />
        <attr name="dd_indicatorColor" format="color" />
        <attr name="dd_textColor" format="color" />
        <attr name="dd_backgroundColor" format="color" />
        <attr name="dd_strokeWidth" format="dimension" />
        <attr name="dd_strokeColor" format="color" />
        <attr name="dd_cornerRadius" format="dimension" />
        <attr name="dd_dropdownHeight" format="dimension" />
        <attr name="dd_showByDefault" format="boolean" />
        <attr name="dd_sizeWrap" format="boolean" />

        <attr name="dd_maxItemsToShow" format="integer" />

        <attr name="dd_itemBgColor" format="color" />
        <attr name="dd_itemBgSelColor" format="color" />
        <attr name="dd_itemHighlightColor" format="color" />
        <attr name="dd_itemTextColor" format="color" />
        <attr name="dd_itemTextSelColor" format="color" />
        <attr name="dd_itemTextHighlightColor" format="color" />
        <attr name="dd_itemTextSize" format="dimension" />
        <attr name="dd_itemHeight" format="dimension" />
        <attr name="dd_itemPadding" format="dimension" />

        <attr name="dd_dividerColor" format="reference" />
        <attr name="dd_dividerHeight" format="dimension" />

        <attr name="dd_flag_alone_shown" format="boolean" />
        <attr name="dd_hideDDTxt" format="boolean" />
        <attr name="dd_showSelectedItem" format="boolean" />
        <attr name="dd_txt_show_left_drawable" format="boolean" />
        <attr name="dd_txt_with_all" format="boolean" />

    </declare-styleable>


    <attr name="HListViewStyle" format="reference"/>

    <declare-styleable name="HListView">
        <!--item高度-->
        <attr name="item_height" format="dimension"/>
        <!--item宽度-->
        <attr name="item_width" format="dimension"/>
        <!--item获得焦点后缩放因子-->
        <attr name="item_scale_factor" format="float"/>
        <!--缩放动画持续时间-->
        <attr name="item_scale_duration" format="integer"/>
        <!--item之间的间距-->
        <attr name="spacing" format="dimension"/>
        <!--控件滚动到最左侧溢出范围-->
        <attr name="left_offset" format="dimension"/>
        <!--控件滚动到最右侧溢出范围-->
        <attr name="right_offset" format="dimension"/>
        <!--item相对于HListView的Gravity-->
        <attr name="gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="center" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
        <attr name="bg_color" format="color"/>
    </declare-styleable>

</resources>